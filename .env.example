ADMIN_USER_IDS=123456789

# ========== STRATEGY - EMA ==========
EMA_PERIODS_FAST=5
EMA_PERIODS_MED=10
EMA_PERIODS_SLOW=20
EMA_TREND_TIMEFRAME=M5

# ========== STRATEGY - RSI ==========
RSI_PERIOD=14
RSI_TIMEFRAME=M1
RSI_OVERSOLD_LEVEL=30
RSI_OVERBOUGHT_LEVEL=70
RSI_CONFIRMATION_BARS=2

# ========== STRATEGY - STOCHASTIC ==========
STOCH_K_PERIOD=14
STOCH_D_PERIOD=3
STOCH_SMOOTH_K=3
